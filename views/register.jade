extends ./layout.jade
block content
  body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse', href='#')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='/') Stock Market
          .nav-collapse
            ul.nav
              li.dropdown
                a.dropdown-toggle(href='/index', data-toggle='dropdown')
                  | Login 
                  b.caret
                ul.dropdown-menu
                  li
                    a(href='/login') Login
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  | Register 
                  b.caret
                ul.dropdown-menu
                  li
                    a(href='/register') Register
    .container
      .row
        .span6
          .register-info-wraper
            #register-info
              h1 Use the Form behind for FREE Registration
              ul
                li It's Free
                li What are you waiting for?
                li Are you still reading?
                li Move on!
        .span6
          #register-wraper
            form#register-form.form
              legend Register
              .body
                // first name
                .control-group.control-inline
                  label(for='name') First name
                  input.input-medium(name='name', type='text')
                // last name
                .control-group.control-inline
                  label(for='surname') Last name
                  input.input-medium(name='surname', type='text')
                // username
                label Username
                input.input-huge(type='text')
                // email
                label E-mail
                input.input-huge(type='text')
                // password
                label Password
                input.input-huge(type='text')
              .footer
                label.checkbox.inline
                  input#inlineCheckbox1(type='checkbox', value='option1')
                  |  I agree but I will never read this
                br
                button.btn.btn-success(type='submit') Register
                a.btn.btn-danger(href='/login') Login

    script(src='js/jquery-1.8.3.min.js', type='text/javascript')
    script(src='js/bootstrap/js/bootstrap.min.js')
    script(src='js/holder.js')
    script(src='js/backstretch.min.js')
    link(rel='stylesheet', href='/css/login.css')
    script(type='text/javascript').
      $(document).ready(function() {
      $.backstretch([
      "img/bg1.png",
      "img/bg2.png"
      ], {duration: 3000, fade: 750});
      });
